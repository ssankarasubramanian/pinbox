<%= link_to 'Back', pins_path %>

<div class="row" id="pin_show">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading pin_image">
        <%= image_tag @pin.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <p class="description"><%= @pin.description %></p>
			</div>
      <div class="panel-footer">
      	<div class="row">
      		<div class="col-md-6">
						<p class="user_show"><%= @pin.user.name if @pin.user %></p>
					</div>
					<div class="col-md-6">
						<div class="btn-group pull-right">
							<%= link_to like_pin_path(@pin), method: :put, class: "btn btn-default show-buttons" do %>
							<span class="glyphicon glyphicon-heart"></span> <%= @pin.get_upvotes.size %>
							<% end %>
							<% if current_user && @pin.user == current_user %>
								<%= link_to edit_pin_path(@pin), class: "btn btn-default show-buttons" do %>
									<span class="glyphicon glyphicon-edit"></span> Edit
								<% end %>
								<%= link_to pin_path, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default show-buttons " do %>
									<span class="glyphicon glyphicon-trash"></span> Delete
								<% end %>
							<% end %>
						</div>
					</div>
				</div>
      </div>
    </div>
  </div>
</div>